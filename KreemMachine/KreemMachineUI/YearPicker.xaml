<UserControl x:Class="KreemMachine.YearPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KreemMachine"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <StackPanel TextBlock.FontSize="18" Orientation="Horizontal">

        <Button Content="&lt;" Click="PreviousYearButton_Click" Background="Transparent" BorderBrush="Transparent" />
        <TextBlock x:Name="DisplayYearTextBlock" VerticalAlignment="Center" TextAlignment="Center"  Text="Select Year" MinWidth="135" />
        <Button Content="&gt;" Click="NextYearButton_Click" Background="Transparent" BorderBrush="Transparent"/>


    </StackPanel>
</UserControl>
