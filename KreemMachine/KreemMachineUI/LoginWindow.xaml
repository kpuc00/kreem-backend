<Window x:Class="KreemMachine.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KreemMachine"
        mc:Ignorable="d"
        Title="Kreem Machine: Log In" Height="300" Width="300"
        WindowStartupLocation="CenterScreen" Icon="kreem_icon.png">

    <StackPanel Margin="20 0" TextBlock.FontSize="18">

        <!--Email-->
        <TextBlock Text="Log in" FontSize="35" Margin="0, 0, 0, 15" />

        <!--Email-->
        <TextBlock Text="Email" />
        <TextBox x:Name="EmailTextBox" />

        <!--Password-->
        <TextBlock Margin="0 10 0 0" Text="Password" />
        <PasswordBox x:Name="SecretPasswordBox"  />

        <Button Content="Log in" Margin="0 25" Padding="0 5"
                x:Name="LogInButton" Click="LogInButton_Click" />

    </StackPanel>

</Window>
