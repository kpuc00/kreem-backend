<Window x:Class="KreemMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KreemMachine"
        mc:Ignorable="d"
        Title="Kreem Machine" Height="500" Width="1200">
    <Grid>
        <TabControl x:Name="MainContent" TabStripPlacement="Left">
            <!--Style to make the TabHeaders go to left and look somewhat nice-->
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Border Name="Border" BorderBrush="Black" Margin="10 0"
                                            BorderThickness="0" MinWidth="100">
                                    <ContentPresenter x:Name="ContentSite" ContentSource="Header"  
                                                RecognizesAccessKey="True" TextBlock.FontSize="18"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Panel.ZIndex" Value="100" />
                                        <Setter TargetName="Border" Property="BorderThickness" Value="0 0 0 1" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!--Users-->
            <TabItem Header="Users" Loaded="TabItem_Loaded">
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Create button and search-->
                        <RowDefinition Height="auto" />
                        <!--List of users-->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Create button -->
                        <ColumnDefinition Width="*" />
                        <!-- Search bar-->
                    </Grid.ColumnDefinitions>
                    <Button x:Name="CreateUserButton" Click="CreateUserButton_Click"
                            Content="Create" Padding="7 3" Margin="5 3" />
                    <TextBox Grid.Column="1" Margin="3" />
                    <ListBox Grid.Row="1" Grid.ColumnSpan="2"  x:Name="AllUsersListBox" 
                             TextBlock.FontSize="18" Grid.IsSharedSizeScope="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <!-- Photo -->
                                        <ColumnDefinition Width="30" />
                                        <!-- First Name -->
                                        <ColumnDefinition SharedSizeGroup="FirstNameColumn" Width="Auto"/>
                                        <!-- Last Name -->
                                        <ColumnDefinition SharedSizeGroup="LastNameColumn" Width="Auto"/>
                                        <!-- Role -->
                                        <ColumnDefinition SharedSizeGroup="RoleColumn" Width="Auto"/>
                                        <!-- Email -->
                                        <ColumnDefinition SharedSizeGroup="EmailColumn" Width="Auto"/>
                                        <!-- Edit -->
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Delete -->
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image />
                                    <TextBlock Grid.Column="1" Text="{Binding FirstName}" Margin="0 0 10 0" />
                                    <TextBlock Grid.Column="2" Text="{Binding LastName}" Margin="0 0 10 0" />
                                    <TextBlock Grid.Column="3" Text="{Binding Role}" Margin="0 0 10 0" />
                                    <TextBlock Grid.Column="4" Text="{Binding Email}" Margin="0 0 10 0" />
                                    <Button Grid.Column="5" Content=" Edit " Margin="0 0 10 0" />
                                    <Button Grid.Column="6" Content=" Delete " />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>

            <!--Schedule-->
            <TabItem Header="Schedule">
                <TextBlock Text="Interface for schedule" />
            </TabItem>

            <!--Statistics-->
            <TabItem Header="Statistics">
                <TextBlock Text="Interface for statistics" />

            </TabItem>
            <TabItem Header="Settings" Loaded="TabItem_Loaded_1">
                <TabControl x:Name="InnerSettingsTab"
                            TabStripPlacement="Left">
                    <TabItem Header="Schedule settings" Loaded="TabItem_Loaded_2">
                        <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <!--Schedule panel-->
                            <Border Grid.Column="1" Grid.Row="1"
                              Grid.ColumnSpan="3"
                              BorderBrush="Transparent" 
                              BorderThickness="1"
                              Width="300"
                              VerticalAlignment="Center"
                              TextBlock.FontSize="18"
                              HorizontalAlignment="Left"
                                    >
                                
                        <StackPanel Orientation="Vertical" Margin="5">
                            <TextBlock Text="Shift name"/>
                            <!--<TextBox x:Name="ShiftNameTextBox"
                                     HorizontalAlignment="Left"
                                     Width="118"
                                     Margin="0, 5, 0, 0"/> -->
                            <ComboBox x:Name="ShiftNameComboBox"
                                      HorizontalAlignment="Left"
                                      Width="118"
                                      Margin="0, 5, 0, 0"/>
                            <ComboBoxItem Content="{Binding Name}" />
                            <TextBlock Text="Shift hours" 
                                       Margin="0, 10, 0, 0"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="ShiftStartTextBox" 
                                         Margin="0, 10, 0, 0" Width="50" 
                                         HorizontalAlignment="Left"/>
                                <TextBlock Text=" - " FontSize="20" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           Margin="0, 5, -10, 0"/>
                                <TextBox x:Name="ShiftEndTextBox" 
                                         Margin="10, 10, 0, 0" 
                                         Width="50" 
                                         HorizontalAlignment="Right"/>
                                <TextBlock x:Name="HoursTextBlock" Text="(7h)"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" 
                                           Margin="15, 5, -10, 0"/>
                            </StackPanel>
                            <TextBlock Text="Minimum staff number" 
                                       Margin="0, 10, 0, 0"/>
                            <TextBox x:Name="MinimumStaffTextBox" 
                                     Margin="0, 5, 0, 0" 
                                     Width="40" 
                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Maximum staff number" 
                                       Margin="0, 10, 0, 0"/>
                            <TextBox x:Name="MaximumStaffTextBox" 
                                     Margin="0, 5, 0, 0" 
                                     Width="40" 
                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Preferred staff number" 
                                       Margin="0, 10, 0, 0"/>
                            <TextBox x:Name="PreferredStaffTextBox" 
                                     Margin="0, 5, 0, 0" 
                                     Width="40" 
                                     HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                        <Button x:Name="ButtonSaveScheduleSetting" Grid.Column="1"
                            Margin="0, 10, 0, 0"
                            Content="Save"
                            FontSize="20"
                            HorizontalAlignment="Center"
                            Grid.Row="2"
                            Width="100"
                            Height="50"/>
                    </Grid>
                    </TabItem>
                    <TabItem Header="Connection settings" Loaded="TabItem_Loaded_3"
                             TextBlock.FontSize="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Vertical"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Host" FontSize="18"/>
                                    <TextBlock Text="Port" FontSize="18"
                                               Margin="130, 0, 0, 0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="HostTextBox" Width="150"
                                             Height="35"
                                         HorizontalAlignment="Left"/>
                                    <TextBox x:Name="PortTextBox" Width="100"
                                             Height="35"
                                             Margin="18, 0, 0, 0"/>
                                </StackPanel>
                                <TextBlock Text="Username"
                                           FontSize="18"
                                           Margin="0, 25, 0, 0"/>
                                <TextBox x:Name="ConnectionUsernameTextBox"
                                         Width="269"
                                         Height="35"
                                         HorizontalAlignment="Left"/>
                                <TextBlock Text="Password"
                                           FontSize="18"
                                           Margin="0, 10, 0, 0"/>
                                <PasswordBox x:Name="ConnectionPasswordPasswordBox"
                                         Width="269"
                                         Height="35"
                                         HorizontalAlignment="Left"/>
                                <Button x:Name="ButtonSaveConnectionSetting" Grid.Column="2"
                            Margin="0, 30, 0, 0"
                            Content="Save"
                            FontSize="20"
                            HorizontalAlignment="Left"
                            Width="150"
                            Height="35"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
